<html>
    <head>
        <title>Game</title>
    </head>
    <body>
       
        <!-- Include Header -->
        <%- include('components/header') %>

        <div class="game-container">
        <!-- Players Section -->
        <div class="players-container">
            <h2>Players</h2>
            <ul id="players-list">
            <% players.forEach(player => { %>
                <li class="<%= player.isCurrent ? 'current-player' : '' %>">
                <span><%= player.name %></span>
                <span>(<%= player.cards %> cards)</span>
                </li>
            <% }) %>
            </ul>
        </div>

        <!-- Game Board Section -->
        <div class="game-board">
            <!-- Discard Pile -->
            <div class="discard-pile">
            <h3>Discard Pile</h3>
            <img
                src="/images/cards/<%= discardPile.topCard.image %>"
                alt="<%= discardPile.topCard.name %>"
                class="card"
            />
            </div>

            <!-- Player's Hand -->
            <div class="player-hand">
            <h3>Your Hand</h3>
            <div class="hand-cards">
                <% playerHand.forEach(card => { %>
                <img
                    src="/images/cards/<%= card.image %>"
                    alt="<%= card.name %>"
                    class="card"
                    data-card-id="<%= card.id %>"
                />
                <% }) %>
            </div>
            </div>

            <!-- Game Actions -->
            <div class="game-actions">
            <button id="draw-card-btn">Draw Card</button>
            <button id="call-uno-btn">Call UNO</button>
            </div>
        </div>
        </div>

        <!-- Include Chat -->
        <%- include('components/chatbox') %>
        
    </body>
</html>